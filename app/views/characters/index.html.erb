<div style="text-align: center;">
  <h1>MCU Characters</h1>
</div>

<div class="character-grid">
  <% @characters.each do |character| %>
    <div class="character-item">
      <% if character.profile_image.attached? %>
        <%= link_to character_path(character) do %>
          <%= image_tag url_for(character.profile_image), alt: character.name, size: "150x250" %>
        <% end %>
      <% else %>
        <%= link_to character.name, character_path(character) %>
      <% end %>
      <div class="character-actions">
        <%= link_to 'Delete', character_path(character), method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Edit', edit_character_path(character), class: 'btn btn-warning' %>
      </div>
    </div>
  <% end %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to 'Add Character', new_character_path, class: 'btn btn-primary' %>
</div>
